<?xml version="1.0" encoding="utf-8" ?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:padding="10dp">

    <RelativeLayout
        android:id="@+id/relativeLayout_column"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:layout_above="@+id/textView_bar_title"
        android:layout_gravity="center">

        <TextView
            android:layout_alignParentLeft="true"
            android:id="@+id/textView_bar_left"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_alignParentBottom="true"
            android:gravity="bottom"
            android:padding="10dp"
            android:textSize="16sp"
            android:background="#4CA613"/>

        <TextView
            android:layout_toRightOf="@+id/textView_bar_left"
            android:id="@+id/textView_bar_right"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:layout_gravity="bottom"
            android:layout_alignParentBottom="true"
            android:padding="10dp"
            android:textSize="16sp"
            android:background="#FF9A39"/>

        <TextView android:id="@+id/textView_label_bar_left"
            android:layout_width="wrap_content"
            android:gravity="center_horizontal"
            android:layout_height="15dp"
            android:layout_above="@+id/textView_bar_left"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="13sp"
            android:layout_alignLeft="@+id/textView_bar_left"
            android:layout_alignRight="@+id/textView_bar_left" />

        <TextView android:id="@+id/textView_label_bar_right"
            android:layout_width="wrap_content"
            android:gravity="center_horizontal"
            android:layout_height="15dp"
            android:layout_above="@+id/textView_bar_right"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="13sp"
            android:layout_toRightOf="@+id/textView_bar_left"
            android:layout_alignRight="@+id/textView_bar_right" />
    </RelativeLayout>

    <TextView
        android:id="@+id/textView_bar_title"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:textColor="#000"/>

</RelativeLayout>